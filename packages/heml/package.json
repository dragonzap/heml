{
	"name": "heml",
	"version": "1.2.0",
	"description": "HEML is an open source markup language for building responsive email",
	"keywords": [
		"heml",
		"email"
	],
	"homepage": "https://heml.io",
	"bugs": "https://github.com/dragonzap/heml/issues",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/dragonzap/heml.git"
	},
	"author": "SparkPost <dev-relations@sparkpost.com> (https://sparkpost.com)",
	"files": [
		"build/"
	],
	"main": "build/index",
	"types": "build/index",
	"scripts": {
		"build": "npm run clean && npm run compile",
		"clean": "rm -rf ./build",
		"compile": "tsc -p tsconfig.build.json",
		"prepublishOnly": "npm run build"
	},
	"bin": {
		"heml": "build/bin/heml.js"
	},
	"dependencies": {
		"@heml/elements": "file:../heml-elements",
		"@heml/inline": "file:../heml-inline",
		"@heml/mailchimp-elements": "file:../heml-mailchimp-elements",
		"@heml/parse": "file:../heml-parse",
		"@heml/render": "file:../heml-render",
		"@heml/utils": "file:../heml-utils",
		"@heml/validate": "file:../heml-validate",
		"boxen": "^4.2.0",
		"byte-length": "^1.0.2",
		"chalk": "^4.1.0",
		"commander": "^5.1.0",
		"express": "^4.17.1",
		"fs-extra": "^9.0.1",
		"gaze": "^1.1.3",
		"get-port": "^5.1.1",
		"js-beautify": "^1.11.0",
		"lodash": "^4.17.15",
		"log-update": "^4.0.0",
		"open": "7.0.4",
		"reload": "^3.1.0"
	},
	"devDependencies": {
		"typescript": "^3.9.5"
	},
	"publishConfig": {
		"access": "public"
	}
}
