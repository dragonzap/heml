{
	"name": "@heml/styles",
	"version": "1.2.2-alpha.1",
	"description": "CSS processor for HEML",
	"keywords": [
		"heml"
	],
	"homepage": "https://heml.io",
	"bugs": "https://github.com/dragonzap/heml/issues",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/dragonzap/heml.git"
	},
	"author": "Dragonzap <dragonzap.misi@gmail.com>",
	"files": [
		"build/"
	],
	"main": "build/index",
	"types": "build/index",
	"scripts": {
		"build": "npm run clean && npm run compile",
		"clean": "rm -rf ./build",
		"compile": "babel src --out-dir build --source-maps --extensions .ts,.tsx --delete-dir-on-start --config-file ../../babel.config.js --no-comments",
		"prepublishOnly": "npm run build"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.pkg.github.com/"
	},
	"dependencies": {
		"@heml/render": "file:../heml-render",
		"cheerio": "1.0.0-rc.3",
		"css-declaration-sorter": "^6.0.1",
		"css-shorthand-expand": "^1.2.0",
		"lodash": "^4.17.20",
		"postcss": "^8.1.4",
		"postcss-calc": "^7.0.5",
		"postcss-color-rgba-fallback": "^4.0.0",
		"postcss-colornames-to-hex": "^1.0.1",
		"postcss-convert-values": "^4.0.1",
		"postcss-discard-comments": "^4.0.2",
		"postcss-discard-duplicates": "^4.0.2",
		"postcss-discard-empty": "^4.0.1",
		"postcss-discard-overridden": "^4.0.1",
		"postcss-email-important": "^1.0.0",
		"postcss-hex-format": "^1.0.0",
		"postcss-merge-longhand": "^4.0.11",
		"postcss-merge-rules": "^4.0.3",
		"postcss-minify-font-values": "^4.0.2",
		"postcss-minify-gradients": "^4.0.2",
		"postcss-minify-params": "^4.0.2",
		"postcss-minify-selectors": "^4.0.2",
		"postcss-normalize-display-values": "^4.0.2",
		"postcss-normalize-positions": "^4.0.2",
		"postcss-normalize-repeat-style": "^4.0.2",
		"postcss-normalize-string": "^4.0.2",
		"postcss-normalize-timing-functions": "^4.0.2",
		"postcss-ordered-values": "^4.1.2",
		"postcss-rgba-hex": "^0.3.7",
		"postcss-safe-parser": "^5.0.2",
		"postcss-shorthand-expand": "^1.0.1",
		"postcss-unique-selectors": "^4.0.1"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.22",
		"typescript": "^4.0.5"
	}
}
