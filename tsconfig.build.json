{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"allowJs": true,
		"esModuleInterop": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"lib": ["es6", "dom"],
		"jsxFactory": "HEML.createElement",
		"jsx": "react"
	},

	"exclude": ["node_modules", "dist"]
}
