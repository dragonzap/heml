{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"sourceMap": true,
		"allowJs": true,
		"esModuleInterop": true,
		"declaration": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsxFactory": "HEML.createElement",
		"jsx": "react",
		"importHelpers": true
	},

	"exclude": ["node_modules", "build"]
}
