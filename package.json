{
	"name": "heml-project",
	"private": true,
	"repository": "https://github.com/dragonzap/heml2.git",
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"postinstall": "lerna link",
		"prerelease": "yarn build",
		"lint": "standard 'packages/**/src/**/*.js' 'test/**/*.js' --fix",
		"test": "jest",
		"test-full": "npm run bootstrap && npm run build && npm run lint && jest ./test/*.spec.js",
		"clean": "lerna run clean && lerna clean --yes",
		"build": "lerna exec --parallel -- babel src --out-dir dist --source-maps --extensions .ts,.tsx --config-file ../../babel.config.js --delete-dir-on-start --no-comments",
		"publish": "lerna publish"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@babel/cli": "^7.12.1",
		"@babel/core": "^7.12.3",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-react": "^7.12.1",
		"@babel/preset-typescript": "^7.12.1",
		"@types/node": "^14.14.5",
		"chalk": "^4.1.0",
		"del": "^6.0.0",
		"fancy-log": "^1.3.3",
		"husky": "^4.3.0",
		"jest": "^26.6.1",
		"lerna": "^3.22.1",
		"require-all": "^3.0.0",
		"standard": "^15.0.0",
		"through2": "^4.0.2",
		"typescript": "^4.0.5"
	}
}
